        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserViewModel.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserViewModel.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserViewModel.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserViewModel.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserViewModel.Password)
            </dt>
            <dd class="col-sm-10">
