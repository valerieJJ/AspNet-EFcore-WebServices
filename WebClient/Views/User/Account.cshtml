            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserViewModel.Role)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserViewModel.Role)
            </dd>
            <dt class="col-sm-2">
